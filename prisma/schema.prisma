generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"] // REQUIRED for Vercel
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  name      String?
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())

  profile   UserProfile?
  accounts  Account[]
  sessions  Session[]
}

model UserProfile {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  age        Int?
  gender     String?
  state      String?
  district   String?
  income     Int?
  category   String?
  occupation String?
  disability Boolean?

  // if you added these, keep them:
  education  String?
  ruralUrban String?

  createdAt  DateTime @default(now())
}

model Yojana {
  id          String             @id @default(cuid())
  title       String
  description String
  category    String
  state       String?            // null = national
  link        String
  createdAt   DateTime           @default(now())

  eligibilityRules  EligibilityRule[]
  requiredDocuments RequiredDocument[]
}

model EligibilityRule {
  id         String   @id @default(cuid())
  yojanaId   String
  minAge     Int?
  maxAge     Int?
  gender     String?
  maxIncome  Int?
  category   String?
  state      String?
  occupation String?
  disability Boolean?

  yojana     Yojana  @relation(fields: [yojanaId], references: [id])
}

model RequiredDocument {
  id          String   @id @default(cuid())
  yojanaId    String
  name        String
  description String?

  yojana      Yojana   @relation(fields: [yojanaId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
